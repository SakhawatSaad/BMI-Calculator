<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <ImageView

        android:id="@+id/bmi_logo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/bmi3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText

        android:id="@+id/height_edt"
        android:inputType="numberDecimal"
        android:textAlignment="center"
        android:hint=" Input Your Height (kg) "
        android:layout_margin="30dp"
        app:layout_constraintTop_toBottomOf="@+id/bmi_logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <EditText


        android:id="@+id/Weight_edt"
        android:textAlignment="center"
        android:inputType="numberDecimal"
        android:hint=" Input Your Weight (kg) "
        android:layout_margin="30dp"
        app:layout_constraintTop_toBottomOf="@+id/height_edt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <androidx.appcompat.widget.AppCompatButton

        android:id="@+id/button"
        android:textAlignment="center"
        android:hint=" Click Here For Result "
        android:layout_margin="30dp"
        app:layout_constraintTop_toBottomOf="@+id/Weight_edt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView

        android:id="@+id/result_tv"
        android:textAlignment="center"
        android:hint=" Your BMI Result  Will Be Shown Here "
        android:layout_margin="30dp"
        app:layout_constraintTop_toBottomOf="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />



</androidx.constraintlayout.widget.ConstraintLayout>